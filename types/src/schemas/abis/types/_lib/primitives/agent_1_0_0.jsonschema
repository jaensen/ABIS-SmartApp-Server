{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "abis-schema://abis@abis.internal/types/_lib/primitives/agent_1_0_0",
  "title": "Agent",
  "description": "Contains the basic metadata about an agent",
  "type": "object",
  "properties": {
    "id": {
      "type": "number"
    },
    "createdAt": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
        "enum": ["Profile", "Companion", "Singleton"]
    },
    "timezoneOffset": {
      "type": "number"
    },
    "implementation": {
      "type": "string"
    }
  },
  "required": ["id", "name", "implementation"]
}